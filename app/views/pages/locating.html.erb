
<div id="select-station">
	
	<p id="locating">
		One sec while we locate you...
	</p>
	
	<%= render :partial => 'shared/station-dropdown', :locals => { :txt => 'or select a station' } %>

</div>

<script>
	
	function success(position) {
		//console.log('success');
		window.location.href = '/located?lat=' + position.coords.latitude + '&lng=' + position.coords.longitude + '&accuracy=' + position.coords.accuracy;
	}

	$(function() { 
		//console.log('hi');
		if (geo_position_js.init()) {
		  geo_position_js.getCurrentPosition(success, geo_error);
		} else {
	  	error('not supported');
		}
	});

</script>
